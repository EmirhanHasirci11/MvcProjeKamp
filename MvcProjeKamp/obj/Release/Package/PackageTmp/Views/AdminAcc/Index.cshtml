@model EntityLayer.Concrete.Admin
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <title>Admin adding Page</title>
</head>
<body style="background-color:lightseagreen">
    <div class="container" style="text-align:center;"> 
        <h1>Admin Ekleme Paneli</h1>
    @using (Html.BeginForm("Index", "AdminAcc", FormMethod.Post)) {

    <div class="form-group">
        @Html.Label("Admin UserName")
        @Html.TextBoxFor(x => x.AdminUserName, "", new { @class = "form-control" })
        <br />
        @Html.Label("Admin Password")
        @Html.TextBoxFor(x => x.AdminPassword, new { @class = "form-control" })
        @ViewBag.salt
        <br />
        @Html.Label("Admin Role")
        @Html.TextBoxFor(x => x.AdminRole, new { @class = "form-control" })
        @ViewBag.pass
        <br />
        <button class="btn btn-outline-info" type="submit">Admin Ekle</button>
    </div>
    }
    </div>
</body>
</html>
