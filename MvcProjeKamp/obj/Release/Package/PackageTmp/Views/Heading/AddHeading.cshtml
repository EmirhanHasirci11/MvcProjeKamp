@model EntityLayer.Concrete.Heading
@{
    ViewBag.Title = "AddHeading";
    Layout = "~/Views/Shared/_adminLayout.cshtml";
}

<h2>AddHeading</h2> 
<br />
@using (Html.BeginForm("AddHeading", "Heading", FormMethod.Post))
            {
<div class="form-group">
    @Html.Label("Başlık Adı")
    @Html.TextBoxFor(x => x.HeadingName, new { @class = "form-control" })
    @Html.ValidationMessageFor(x => x.HeadingName)
    
    <br />
    @Html.Label("Başlık Kategorisi")
    @Html.DropDownListFor(x => x.CategoryID,(List<SelectListItem>)ViewBag.valueCat)
    <br />
    @Html.Label("Yazar")
    @Html.DropDownListFor(x => x.WriterID, (List<SelectListItem>)ViewBag.valueWriter)
    @Html.ValidationMessageFor(x => x.WriterID)
</div>
<button class="btn btn-outline-primary">Başlık Ekle</button>
            }

